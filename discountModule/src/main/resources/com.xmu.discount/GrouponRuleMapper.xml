<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xmu.discount.mapper.GrouponRuleMapper">

    <select id="getGrouponRuleById" parameterType="Integer" resultType="grouponRule">
            select id,
                   start_time,
                   end_time,
                   status,
                   groupon_level_strategy,
                   goods_id,
                   gmt_create,
                    gmt_modified,
                    is_deleted

                    from groupon_rule where id = #{id}
    </select>

    <insert id="addGrouponRule" parameterType="grouponRule" useGeneratedKeys="true" keyProperty="id">
        insert into groupon_rule(id,start_time,end_time,status,groupon_level_strategy,goods_id,gmt_create,gmt_modified,is_deleted)
        values
            (#{id}, #{startTime}, #{endTime}, #{statusCode}, #{grouponLevelStrategy}, #{goodsId}, #{gmtCreate}, #{gmtModified}, #{beDeleted})
    </insert>

    <update id="updateGrouponRuleById" parameterType="grouponRule">
        update groupon_rule
        <trim prefix="set" suffixOverrides=",">
            <if test="startTime!=null">start_time=#{startTime},</if>
            <if test="endTime!=null">end_time=#{endTime},</if>
            <if test="statusCode!=null">status=#{statusCode},</if>
            <if test="grouponLevelStrategy!=null">groupon_level_strategy=#{grouponLevelStrategy},</if>
            <if test="goodsId!=null">goods_id=#{goodsId},</if>
            <if test="gmtCreate!=null">gmt_create=#{gmtCreate},</if>
            <if test="gmtModified!=null">gmt_modified=#{gmtModified},</if>
            <if test="beDeleted!=null">id_deleted=#{beDeleted},</if>
        </trim>
        WHERE id=#{id}
    </update>
    
    <select id="listGrouponRuleByGoodsId" parameterType="Integer" resultType="grouponRule">
        select id,
               start_time,
               end_time,
               status,
               groupon_level_strategy,
               goods_id,
               gmt_create,
               gmt_modified,
               is_deleted
        from groupon_rule where goods_id = #{goodsId}
    </select>
</mapper>