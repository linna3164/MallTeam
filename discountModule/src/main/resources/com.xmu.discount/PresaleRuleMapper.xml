<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xmu.discount.mapper.PresaleRuleMapper">
    <resultMap id="PresaleRule" type="presaleRule" autoMapping="true">
        <result property="beDeleted" column="is_deleted"/>
        <result property="statusCode" column="status"/>
    </resultMap>

    <select id="getPresaleRuleById" parameterType="Integer" resultMap="PresaleRule">
        select id,
               goods_id,
               final_start_time,
               ad_end_time,
               start_time,
               end_time,
               status,
               gmt_create,
               gmt_modified,
               is_deleted,
               deposit
        from oomall_presale_rule where id = #{id}
    </select>

    <select id="getPresaleRules" resultMap="PresaleRule">
        select id,
               goods_id,
               final_start_time,
               ad_end_time,
               start_time,
               end_time,
               status,
               gmt_create,
               gmt_modified,
               is_deleted,
               deposit
        from oomall_presale_rule where id!=0
    </select>

    <insert id="addPresaleRule" parameterType="presaleRule" useGeneratedKeys="true" keyProperty="id">
        insert into oomall_presale_rule(goods_id,start_time,ad_end_time,final_start_time,end_time,status,gmt_create,gmt_modified,is_deleted,deposit)
        values
        (#{goodsId}, #{startTime},#{adEndTime},#{finalStartTime}, #{endTime}, #{statusCode},  #{gmtCreate}, #{gmtModified}, #{beDeleted},#{deposit})
    </insert>

    <update id="updatePresaleRuleById" parameterType="presaleRule">
        update oomall_presale_rule
        <trim prefix="set" suffixOverrides=",">
            <if test="goodsId!=null">goods_id=#{goodsId},</if>
            <if test="startTime!=null">start_time=#{startTime},</if>
            <if test="endTime!=null">end_time=#{endTime},</if>
            <if test="statusCode!=null">status=#{statusCode},</if>
            <if test="gmtCreate!=null">gmt_create=#{gmtCreate},</if>
            <if test="gmtModified!=null">gmt_modified=#{gmtModified},</if>
            <if test="beDeleted!=null">is_deleted=#{beDeleted},</if>
            <if test="deposit!=null">deposit=#{deposit},</if>
        </trim>
        WHERE id=#{id}
    </update>

    <select id="listPresaleRuleByGoodsId" parameterType="Integer" resultMap="PresaleRule">
        select id,
               goods_id,
               start_time,
               end_time,
               status,
               gmt_create,
               gmt_modified,
               is_deleted,
               deposit
        from oomall_presale_rule where  goods_id= #{goodsId}
    </select>
</mapper>